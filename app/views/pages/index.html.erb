<div class="index-top-page">
  <div class="index-machinery-for-sale">
    <h1> <%= link_to "Machinery For Sale " , machinery_path %> <i class="fas fa-arrow-circle-right"></i> </h1>
  </div>

  <div class="plough-parts">
    <h1><%= link_to "Plough Parts", ploughparts_path %> <i class="fas fa-arrow-circle-right"></i> </h1>
  </div>

</div>


<div class="recently-added">
  <h3> Recently added</h3>
  <div class="index-new-products">
    <div class="index-new-products-images">
      <div class="owl-carousel owl-theme">
      <% Admin::Product.all.order(created_at: :desc).limit(6).each do |admin_product| %>
        <div class="index-new-product">
          <div class="index-new-product-image">
            <% if admin_product.image.attached? %>
            <%= link_to image_tag(admin_product.image), product_path(admin_product.id) %>
            <% else %>
              <%= link_to image_tag("/assets/coming-soon.png"), product_path(admin_product.id) %>
            <% end %>
            <%= link_to admin_product.title, product_path(admin_product.id) %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="recently-added">
  <h3> Spotlight</h3>
  <div class="index-new-products">
    <div class="index-new-products-images">
      <div class="owl-carousel owl-theme">
      <% Admin::Product.all.each do |admin_product| %>
        <% if admin_product.spotlight == true %>
          <div class="index-new-product">
            <div class="index-new-product-image">
              <% if admin_product.image.attached? %>
                <%= link_to image_tag(admin_product.image), product_path(admin_product.id) %>
              <% else %>
                <%= link_to image_tag("/assets/coming-soon.png"), product_path(admin_product.id) %>
              <% end %>
              <%= link_to admin_product.title, product_path(admin_product.id) %>
            </div>
          </div>
        <%else %>
          <% nil %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<script>
    $('.owl-carousel').owlCarousel({
        loop:false,
        margin:10,
        nav:true,
        responsive:{
            0:{
                items:3
            },
            600:{
                items:3
            },
            1000:{
                items:3
            }
        }
    });
</script>